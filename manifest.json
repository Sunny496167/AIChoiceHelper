{
    "manifest_version": 3,
    "name": "AI Choice Helper",
    "version": "1.0",
    "description": "Get AI-powered answers for multiple choice questions",
    "permissions": [
      "storage",
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
      }
    },
    "icons": {
      "16": "image/icon16.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "commands": {
      "process-selection": {
        "suggested_key": {
          "default": "Ctrl+Q",
          "mac": "Command+E"
        },
        "description": "Process selected text with AI"
      }
    }
  }